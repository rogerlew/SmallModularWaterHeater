<UserControl x:Class="WpfControlLibrary1.Permissive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="60">
    <Grid>
        <Rectangle Name="rect" Fill="#FFDDDDDD" Stroke="#FF666666" StrokeThickness="2"/>
        <TextBlock Name="label" Text="{Binding Title, FallbackValue=AA1}" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Margin="4,4,4,4"/>
    </Grid>
</UserControl>
