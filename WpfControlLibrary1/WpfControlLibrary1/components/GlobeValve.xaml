<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
			 x:Class="WpfControlLibrary1.GlobeValve" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ComponentStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <!-- #Region Bowtie-->
        <Polygon 
            Name="Bowtie"
            Points="50,210 50,105 250,210 250,105"
            Style="{StaticResource PolygonStyle}"/>
        <!-- #EndRegion -->

        <Ellipse
            Name="Globe"
            Width="75" Height="75"
            Style="{StaticResource EllipseStyle}" Margin="115,120,0,0"/>

    </Grid>
</UserControl>
